<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.org.controller.DashboardController"
      spacing="0"
      alignment="CENTER"
      fillWidth="true"
      stylesheets="@styles.css">
  <padding>
    <Insets top="30" right="50" bottom="30" left="50"/>
  </padding>

  <VBox spacing="20" alignment="CENTER" maxWidth="1200" VBox.vgrow="ALWAYS" styleClass="main-container">
    <HBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
      <Label fx:id="welcomeLabel" styleClass="title-label" HBox.hgrow="ALWAYS"/>
      <Label fx:id="roleLabel"/>
    </HBox>
    
    <VBox fx:id="adminButtonsPanel" spacing="15" alignment="CENTER">
      <Button fx:id="manageCustomersButton" text="Quản lý khách hàng" prefWidth="300" minWidth="250"/>
      <Button fx:id="manageCarsButton" text="Quản lý xe ô tô" prefWidth="300" minWidth="250"/>
      <Button fx:id="manageRentalsButton" text="Quản lý giao dịch thuê xe" prefWidth="300" minWidth="250"/>
    </VBox>
    
    <HBox fx:id="adminLogoutContainer" alignment="CENTER" HBox.hgrow="ALWAYS">
      <Button fx:id="logoutButton" text="Đăng xuất" prefWidth="150" minWidth="100" styleClass="logout-button"/>
    </HBox>
    
    <VBox fx:id="customerTabsContainer" VBox.vgrow="ALWAYS"/>
  </VBox>
</VBox>

