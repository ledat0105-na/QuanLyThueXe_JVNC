<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.org.controller.RegisterController"
      spacing="10"
      alignment="CENTER"
      stylesheets="@styles.css">
  <padding>
    <Insets top="20" right="30" bottom="20" left="30"/>
  </padding>

  <Label text="Đăng ký tài khoản" styleClass="title-label"/>
  <TextField fx:id="fullNameField" promptText="Họ và tên" maxWidth="320"/>
  <TextField fx:id="mobileField" promptText="Số điện thoại" maxWidth="320"/>
  <DatePicker fx:id="birthdayPicker" promptText="Ngày sinh" maxWidth="320"/>
  <TextField fx:id="identityCardField" promptText="CMND/CCCD" maxWidth="320"/>
  <TextField fx:id="emailField" promptText="Email" maxWidth="320"/>
  <TextField fx:id="usernameField" promptText="Tên đăng nhập" maxWidth="280"/>
  <PasswordField fx:id="passwordField" promptText="Mật khẩu" maxWidth="280"/>
  <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu" maxWidth="280"/>
  <Button fx:id="registerButton" text="Đăng ký" onAction="#handleRegister" maxWidth="280"/>
  <Hyperlink text="Quay lại đăng nhập" onAction="#goBack"/>
</VBox>

